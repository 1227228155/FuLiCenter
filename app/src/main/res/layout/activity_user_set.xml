<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_user_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eff2f6"
    >
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_press"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:paddingLeft="120dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f6"
            />

        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView3" />
            <ImageView
                android:id="@+id/user_set_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contactlogo"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="220dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f6"
            />
        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView" />
            <TextView
                android:id="@+id/user_set_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:layout_gravity="center_vertical"
                android:textSize="25sp"
                android:layout_marginLeft="250dp"
                />

            <ImageView
                android:id="@+id/user_into_update_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f6"
            />

        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的二维码"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="15dp"
                android:src="@drawable/tb_icon_home_qrcode_normal"
                android:layout_marginLeft="200dp"
                android:background="#eff2f6"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f6"
            />

    </LinearLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/user_set_exit"
            android:background="#f63"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="退出登录"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


</LinearLayout>
