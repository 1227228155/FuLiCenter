<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    >

    <RelativeLayout
        android:background="#f63"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tb_icon_more_msg_white_56"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="设置"
        android:textColor="#fff"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/iv1"
        android:paddingRight="10dp"
        />
        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contactlogo"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="20sp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/iv_user_avatar"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tb_icon_home_qrcode_normal"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/tv_user_name"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:background="#f33"
            android:layout_above="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_marginLeft="65dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="58"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                />


        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:background="#f33"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏的宝贝"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏的店铺"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="我的足迹"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


    </RelativeLayout>

    <LinearLayout
       android:layout_marginTop="10dp"
       android:background="#fff"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="160dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部已购宝贝"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90dp"
            />
        <ImageView
            android:id="@+id/user_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="#eff2f6"
           />
       <LinearLayout
           android:background="#fff"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:src="@drawable/order_list1"
               android:layout_gravity="center_vertical"
               android:layout_weight="1"
               />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/order_list2"
               android:layout_gravity="center_vertical"
               android:layout_weight="1"
               />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/order_list3"
               android:layout_gravity="center_vertical"
               android:layout_weight="1"
               android:id="@+id/imageButton" />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/order_list4"
               android:layout_gravity="center_vertical"
               android:layout_weight="1"
               android:id="@+id/imageButton2" />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/order_list5"
               android:layout_gravity="center_vertical"
               android:layout_weight="1"
               />

       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的卡卷包"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="240dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f6"
            />
        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/center_card_coupon1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活卷"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="250dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f6"
            />
        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/center_card_coupon2"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网店卷"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无可用优惠券"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginLeft="130dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f6"
            />

        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/center_card_coupon3"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员卡"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一卡在手，逛店无忧"
                android:layout_gravity="center_vertical"
                android:textSize="15dp"
                android:layout_marginLeft="100dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff2f6"
            />


    </LinearLayout>

</LinearLayout>