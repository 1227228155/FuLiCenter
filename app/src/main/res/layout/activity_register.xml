<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eff2f6"
    >
    <include layout="@layout/common_head_title"/>

    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nick"
            android:text="密码:"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/twopassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:text="确认密码:"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            />


        <ImageView
            android:id="@+id/iv"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_account"
            android:layout_marginLeft="340dp"
            />
        <ImageView
            android:id="@+id/iv4"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_account"
            android:layout_marginLeft="340dp"
            android:layout_below="@+id/iv3"
            />
        <TextView
            android:id="@+id/nick"
            android:layout_below="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称:"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_below="@+id/iv"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_account"
            android:layout_marginLeft="320dp"
            android:paddingLeft="20dp"
            android:id="@+id/imageView" />

        <EditText
            android:id="@+id/password_et"
            android:layout_toRightOf="@+id/password"
            android:layout_below="@+id/nick_et"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:password="true"
            android:layout_marginLeft="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pwd"
            android:layout_marginLeft="340dp"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="8dp"
            />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/name"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/name"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textSize="20sp"
            android:layout_above="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_twopassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/password_et"
            android:layout_toRightOf="@id/twopassword"
            android:password="true"

             />

        <EditText
            android:id="@+id/nick_et"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/nick"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/name_et"
           />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:text="免费注册"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#f63"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />
</LinearLayout>